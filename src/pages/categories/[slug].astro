---
import BlogLayout from '/src/layouts/BlogLayout.astro';
import { fetchCategories, fetchPostsByCategory, getImageUrl } from '../../lib/strapi';

export async function getStaticPaths() {
  const categories = await fetchCategories();
  return categories.map((category) => ({
    params: { slug: category.Slug },
  }));
}

const { slug } = Astro.params;
const posts = await fetchPostsByCategory(slug);
const categories = await fetchCategories();
const currentCategory = categories.find(c => c.Slug === slug);
---

<BlogLayout title={currentCategory ? `${currentCategory.Name} - My Blog` : 'Category Not Found'}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {currentCategory ? (
      <>
        <!-- Category Header -->
        <div class="text-center mb-12">
          <h1 class="text-3xl font-bold text-gray-900 mb-4">{currentCategory.Name}</h1>
          <p class="text-gray-500 mt-4">{posts.length} post{posts.length !== 1 ? 's' : ''}</p>
        </div>

        <!-- Posts Grid -->
        {posts.length > 0 ? (
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {posts.map((post) => (
              <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full">
                {post.Cover && (
                  <div class="flex-shrink-0">
                    <img 
                      class="h-48 w-full object-cover"
                      src={getImageUrl(post.Cover)}
                      alt={post.Title}
                    />
                  </div>
                )}
                <div class="flex-1 p-6 flex flex-col justify-between">
                  <div class="flex-1">
                    <h2 class="text-xl font-semibold text-gray-900 mb-2">
                      <a href={`/posts/${post.Slug}`} class="hover:text-blue-600 transition-colors">
                        {post.Title}
                      </a>
                    </h2>
                    <p class="text-gray-600 mb-4">{post.Description}</p>
                  </div>
                  <a 
                    href={`/posts/${post.Slug}`} 
                    class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center"
                  >
                    Read more 
                    <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <p class="text-center text-gray-500">No posts in this category yet.</p>
        )}
      </>
    ) : (
      <div class="text-center py-12">
        <h1 class="text-2xl font-bold text-gray-900 mb-4">Category Not Found</h1>
        <p class="text-gray-600 mb-8">The category you're looking for doesn't exist.</p>
        <a 
          href="/" 
          class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
        >
          Go back home
        </a>
      </div>
    )}
  </div>
</BlogLayout>