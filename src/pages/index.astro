---
import BlogLayout from '../layouts/BlogLayout.astro';
import { fetchPosts, getStrapiMediaUrl } from '../lib/strapi';

const posts = await fetchPosts();
---

<BlogLayout title="My Blog - Home">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
        My Blog
      </h1>
      <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
        Thoughts, stories, and ideas worth sharing
      </p>
    </div>

    <!-- Blog Posts Grid -->
    {posts.length > 0 ? (
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {posts.map((post) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full">
            {post.Cover?.data && (
              <div class="flex-shrink-0">
                <img 
                  class="h-48 w-full object-cover"
                  src={getStrapiMediaUrl(post.Cover.data.attributes.url)}
                  alt={post.Title}
                />
              </div>
            )}
            <div class="flex-1 p-6 flex flex-col justify-between">
              <div class="flex-1">
                <h2 class="text-xl font-semibold text-gray-900 mb-2">
                  <a href={`/posts/${post.Slug}`} class="hover:text-blue-600 transition-colors">
                    {post.Title}
                  </a>
                </h2>
                <p class="text-gray-600 mb-4">{post.Description}</p>
              </div>
              <a 
                href={`/posts/${post.Slug}`} 
                class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center"
              >
                Read more 
                <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">No blog posts yet. Check back soon!</p>
      </div>
    )}
  </div>
</BlogLayout>